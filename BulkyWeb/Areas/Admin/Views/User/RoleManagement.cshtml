@model RoleManagementVM

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ApplicationUser.Id" hidden />
            <div class="form-floating py-2 col-12">
                <input class="form-control border-0 shadow" asp-for="ApplicationUser.Name" disabled />
            </div>
            <div class="form-floating py-2 col-12">
                <select id="roleSelect" class="form-select border-0 shadow" asp-for="RoleId" asp-items="@Model.Roles">
                    <option value="RoleId">@Model.ApplicationUser.Role</option>
                </select>
            </div>
            <div class="form-floating py-2 col-12">
                <select class="form-select border-0 shadow" style="display: none;" id="companySelect" asp-for="CompanyId" asp-items="@Model.Companies">
                    @if (Model.ApplicationUser.CompanyId is not null)
                    {
                        <option selected value="@Model.ApplicationUser.CompanyId">@Model.ApplicationUser.Company.Name</option>
                    }
                </select>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-outline-primary form-control">Update</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts {
    <script src="~/js/roleManagement.js"></script>
}